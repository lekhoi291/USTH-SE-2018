<!DOCTYPE html>
<html>
  <head>
    <title>game testing</title>
<script src="/models/game.js"></script>   
<link rel="stylesheet" type="text/css" href="css/style.css" />

  </head>


  <body>
    	<div id = "game"> </div>
      <div> Score: <span id="score"></span></div>
      <div id = "game-over">Game not over</div>



  </body>
  		<script>
        new_number()

  			document.getElementById('game').innerHTML = print_board()
    
        game_over = false
        document.addEventListener('keydown', function(event) {
            if (game_over == true){
              return
            }
            if(event.keyCode == 39) {
                  move_right()
                  new_number()
                  document.getElementById('game').innerHTML = print_board()

            }
            else if(event.keyCode == 37) {
                move_left()
                new_number()
                document.getElementById('game').innerHTML = print_board()

            }
            else if(event.keyCode == 38) {
                move_up()
                new_number()
                document.getElementById('game').innerHTML = print_board()

            }
            else if(event.keyCode == 40) {
                move_down()
                new_number()
                document.getElementById('game').innerHTML = print_board()

            }
            else{
              return
            }
                document.getElementById('score').innerHTML=score
            if (check_game_over() == true){
              document.getElementById('game-over').innerHTML = "Game over"
              game_over = true
            }
        });
      

  		</script>

</html>