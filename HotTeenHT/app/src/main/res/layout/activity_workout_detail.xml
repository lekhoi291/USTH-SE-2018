<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutDetail">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewWorkoutName"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="WorkoutName"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textViewSetupDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewWorkoutName"
        android:text="SetupDetail"
        android:textSize="20dp"
        android:textColor="@color/black"
         />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewWorkoutDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSetupDetail"
        android:layout_above="@id/buttonStartWorkout"
         />

    <Button
        android:id="@+id/buttonStartWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/opaque_red"
        android:text="START"
        android:textColor="@color/white"
        android:textSize="30dp"/>

</RelativeLayout>